#botWidgetWrap
  position: absolute
  bottom: 0px
  right: 50px
  width: 550px
  height: 450px
  background-color: white
  border: solid black 1px
  box-shadow: 0px 0px 5px black
  z-index: 500

  #chatArea
    position: absolute
    top: 0
    bottom: 2em
    overflow-x: hidden
    left: 0
    right: 0
    overflow-y: scroll

  #chatInputWrap
    position: absolute
    bottom: 0px
    z-index: 500
    right: 0
    left: 0

    #chatInput
      width: 100%

  .mdl-button
    float: right
    margin: .25em
    z-index: 200

// Site wide
#chatArea
  .chat
    border-bottom: solid #ccc 1px
    padding: 1em
    
  .botChat
    border-bottom: solid #8aff87 1px
  
  .botPending
    opacity: .5

  .userChat
    font-size: .9em
    
#botPageWrap:after, #botWidgetWrap:after
  content: ""
  display: block
  position: absolute
  width: 100%
  height: 15%
  top: 0
  background: linear-gradient(white, transparent) left repeat
