.tag-center > .noteContainer .title
    text-align: center
.tag-h1 > .noteContainer .title
    font-size: 2.25em !important
    font-weight: bold
.tag-h2 > .noteContainer .title
    font-size: 2em !important
    font-weight: bold
.tag-h3 > .noteContainer .title
    font-size: 1.75em !important
    font-weight: bold

.title,
[contenteditable] {
    -webkit-user-select: text;
    user-select: text;
}

.noteContainer.dragging
  border: dashed gray 1px

.note-item
  border-left: solid 4px rgba(0,0,0,0)
  border-right: solid 4px rgba(0,0,0,0)
  padding: 0px
  position: relative
  margin-bottom: 2px
  // border-bottom: none !important
  line-height: 1.75
  clear: both

  .options
    margin: -6px 1em 0 0

  .mdl-badge.count
    margin-left: -1.5em;
    opacity: .7;

  .searchResult
    font-weight: bold
    font-size: 1.2em
    color: #41CAC0

  .mdl-button--colored.favorite
      opacity: 1

  .body
    font-size: 1em
    margin-left: 6em
    min-height: 1.5em
    border: solid #777 1px
    padding: .5em
    border-radius: .5em

  .dot
    cursor: move

  .hideContent, .showContent
    width: 101%;
    border-top: 1px solid gray;
    display: block;
    text-align: center;
    margin: 0.5em -3em -.5em -0.5em;
    color: #808080;
    opacity: 0.35;
    padding: .25em;
    i
      display: block;
      background: white;
      width: 50px;
      margin: -10px auto 0;

  .noteNumber
    display: none
    position: absolute
    color: #a7a7a7
    left: 3.5em
    font-size: 1.5em
    margin-top: -1.4em
    cursor: move

  .progress
    margin: 10px 0 0
    height: 10px

  .noteContainer
    padding: 5px 0 5px 5px
    border-left: solid 4px rgba(0,0,0,0)
    border-right: solid 4px rgba(0,0,0,0)


  .noteTitle
    margin-left: 6.5em
    margin-top: -5px

  .title
    display: block
    min-width: 40%
    min-height: 1.5em

  div.title:focus
      outline: none

  p
    margin: .5em .5em .5em 20px
    opacity: .8
    font-size: 1.2em

  .thumb
    margin: -15px 0 0 25px

  .badge
    margin-right: .5em
    background: color-primary

  .dropdown-menu
    margin-top: -2px

.toggleComplete
  text-align: center
  opacity: .7
  border-top: solid gray 2px
  cursor: pointer
  a
    padding: 0 1em


.keyboardShortcutHint
  opacity: .5
  font-size: .9em
  margin-left: 1em

.note.focused > .noteContainer .title
  box-shadow: 0 0 10px rgba(0,0,255,.6)

.note.hasHiddenChildren
  .dot
    border: solid #999 2px;

.note .mdl-button--icon
  height: 1em
  min-width: 1em
  width: 1em
  .material-icons
    font-size: .6em

.note-item.encrypted
  .encryptedTitle
    color: #aaa

.note-item.encrypted, .note-item.encryptedRoot
  .encryptedIcon
    float: left
    margin-right: 1em
    color: green
    z-index: 1000
    cursor: pointer

.note.hasChildren > .noteContainer .expand
    opacity: 1
    cursor: pointer

.note .expand
    opacity: 0
    cursor: default

// Large screens
@media screen and (min-width: 40em)
  .note
    transition: all .2s ease-in-out;
    .expand
      opacity: 0
      cursor: default

  .note .favorite:hover
    color: rgb(255,87,34)
    opacity: .7

.note .favorite.mdl-button--colored, .mdl-button--colored.favorite:hover
    color: rgb(255,87,34)
    opacity: 1 !important

.tag-list ol
  .dot
    opacity: 0
  .noteNumber
    display: block

.note.shared .fa-ellipsis-v
  border-color: purple


.tagLink, .atLink
  border-width: 0
  padding: .1em 0
  border-radius: 10px
  border-style: solid
  box-shadow: 0px 0px 5px rgba(0,0,255,.5)

.tagLink:hover, .atLink:hover
  box-shadow: 2px 2px 3px #8e8e8e

.tag-white
  border-color: white
  background-color: white
.tag-red
  border-color: #FF2020
  background-color: rgba(255, 0, 0, 0.4)
.tag-orange
  border-color: #FFD8B5
  background-color: rgba(255, 216, 181, 0.7)
.tag-yellow
  border-color: #FFFAB5
  background-color: rgba(255, 250, 181, 0.7)
.tag-lime
  border-color: #E1FFB5
  background-color: rgba(225, 255, 181, 0.7)
.tag-olive
  border-color: #B5FFC9
  background-color: rgba(181, 255, 201, 0.7)
.tag-green
  border-color: #CCFFB5
  background-color: rgba(204, 255, 181, 0.7)
.tag-teal
  border-color: #B5FFD7
  background-color: rgba(181, 255, 215, 0.7)
.tag-aqua
  border-color: #B5FFFC
  background-color: rgba(181, 255, 252, 0.7)
.tag-blue
  border-color: #B5E8FF
  background-color: rgba(181, 232, 255, 0.7)
.tag-navy
  border-color: #3f34ff
  background-color: rgba(63, 52, 255, 0.4)
.tag-fuchia, .tag-fuschia
  border-color: #F1B5FF
  background-color: rgba(241, 181, 255, 0.7)
.tag-pink
  border-color: #F1B5FF
  background-color: pink
.tag-purple
  border-color: #D3B5FF
  background-color: rgba(211, 181, 255, 0.7)
.tag-maroon
  border-color: #C08F8F
  background-color: rgba(192, 143, 143, 0.7)
.tag-silver
  border-color: silver
  background-color: rgba(192, 192, 192, 0.7)
.tag-gray
  border-color: gray
.tag-complete > .noteContainer, .tag-done > .noteContainer, .tag-finished > .noteContainer
  .title, .body
    text-decoration: line-through
    opacity: .5

#preview
  position: fixed
  border:1px solid #ccc
  background:#333
  padding:5px
  display:none
  color:#fff
  max-width: 400px
  z-index: 100
  img
    width: 100%

.note-item.shared
  .dot
    background: rgba(0, 128, 28, 0.16)

.placeholder
  box-shadow: purple 0 0 5px 1px
  border: dashed gray 1px
  height 50px

#tagSearchPreview
  width: 500px
  opacity: 0
  position: fixed
  li
    border-bottom: 1px solid lightgray
    color: black
    padding: 1em 1em
  li:last-child
    border-bottom: none
  .previewTagLink
    text-overflow: ellipsis
    overflow: hidden
  .tagLink
    display: inline

@media screen and (min-width: 60em)
  #tagSearchPreview
    opacity: 1

.modal.encrypt
  margin-top: 10em

.openEncrypt, .openMoveTo, .openShare, .openCard
  display: none

div.pass-container
    height: 30px;

div.pass-bar
    height: 11px;
    margin-top: 2px;
div.pass-hint
    font-family: arial;
    font-size: 11px;

.previewTagViewAll
  opacity: .5
  font-style: italic
  text-align: center

.note-item.favorite > .noteContainer
  .dot
    background-color: rgba(255, 62, 157, 0.5)
